import com.vueling.pageobjects.SchedulePageObjects;

public class SchedulePageActions extends SchedulePageObjects{
	
	WebDriver driver;

	public SchedulePageActions(WebDriver driver) {
		super(driver);
		this.driver = driver;
	}

	public PassengersPageActions selectFlight() throws InterruptedException {
//		waitForElementToAppear(acceptPrivacyButtonLocator, 5).click();
//		acceptPrivacyButton.click();
		Thread.sleep(5000);
		outboundTicket.get(0).click();
		returnTicket.get(0).click();
		flightlightButton.click();
		continueButton.click();
		
		Thread.sleep(3000);
		return (new PassengersPageActions(driver));
	}

}