package com.vueling.tests;

import org.testng.annotations.Test;
import java.io.IOException;
import java.util.HashMap;
import java.util.List;

import org.testng.annotations.DataProvider;
import org.testng.annotations.Test;

import com.vueling.TestComponenets.BaseTest;
import com.vueling.pageactions.SchedulePageActions;

public class PurchaseTicketTest extends BaseTest{
	
	@Test(dataProvider = "getData")
	public void purchaseTicketTest(HashMap<String, String> input) throws InterruptedException {
		SchedulePageActions schedulepagections = mainpageactions.selectFlight(input.get("originSearch")
				, input.get("originResult")
				, input.get("destinationResult")
				, input.get("adultPassengers"));
		
		System.out.println(driver.getTitle());
		
		schedulepagections.selectFlight();
		System.out.println(driver.getTitle());
	}
	
	@DataProvider
	public Object[][] getData() throws IOException {
		List<HashMap<String, String>> jsonList = getJsonDataToMap(System.getProperty("user.dir") 
				+ "/src/test/java/com/vueling/data/PurchaseOrder.json");
		
		Object[][] data = new Object[][] {{jsonList.get(0)}};
		
		return data;
	}

}