package com.vueling.pageobjects;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.FindBy;
import org.openqa.selenium.support.PageFactory;

import com.vueling.AbstractComponents.AbstractComponents;

public class MainPage extends AbstractComponents{
	
WebDriver driver;
	
	public MainPage(WebDriver driver) {
		super(driver);
		this.driver = driver;
		PageFactory.initElements(driver, this);
	}
	
	@FindBy(id="originInput")
	WebElement originInput;
	
	@FindBy(id="destinationInput")
	WebElement destinationInput;
	
	@FindBy(id="outboundDate")
	WebElement outboundDateInput;
	
	@FindBy(id="returnDate")
	WebElement returnDateInput;
	
	@FindBy(css=".passengers")
	WebElement passengersInput;
	
	@FindBy(css=".ds-icon-search")
	WebElement searchButton;
	
	@FindBy(id="onetrust-accept-btn-handler")
	protected
	WebElement acceptCookiesButton;
	
	
	public void acceptCookies() {
		acceptCookiesButton.click();
	}
	
	public void goTo() {
		driver.get("https://www.vueling.com/en");
	}
	
}
