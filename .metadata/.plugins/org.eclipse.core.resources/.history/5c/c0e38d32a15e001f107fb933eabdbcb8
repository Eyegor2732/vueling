package com.vueling.pageactions;

import java.util.List;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;

import com.vueling.pageobjects.PaymentPageObjects;
import com.vueling.pageobjects.SchedulePageObjects;
import com.vueling.pageobjects.SeatservicePageObjects;
import com.vueling.pageobjects.ServicesPageObjects;

public class PaymentPageActions extends PaymentPageObjects{
	
	WebDriver driver;

	public PaymentPageActions(WebDriver driver) {
		super(driver);
		this.driver = driver;
	}

	public PassengersPageActions selectServices(String cardNumber, String cardType, String cardHolder, String expiry, String cvv) throws InterruptedException {
//		waitForElementToAppear(acceptPrivacyButtonLocator, 5).click();
		cardnumberInput.sendKeys(cardNumber);
		cardtypeInput.sendKeys(cardType);
		cardholderInput.sendKeys(cardHolder);
		expiryInput.sendKeys(expiry);
		cvvInput.sendKeys(cvv);
		legalCheckbox.click();
		continueButton.click();
		
		Thread.sleep(3000);
		return (new PassengersPageActions(driver));
	}

}